<mjml>
    <mj-body>
        <mj-section background-color="#fafafa">
            <mj-column width="400px">

                <mj-text font-style="italic"
                         font-size="20px"
                         font-family="Helvetica Neue"
                         color="#626262" align="center">Hello {{ user.username }}</mj-text>

                <mj-text color="#525252" align="center">
                    You can reset your password by clicking on the button below. If however you are not the author of this request, please ignore this email.
                </mj-text>
                <mj-button background-color="#b43232" href="http://localhost:8000/reset-password/{{ user.resetPasswordToken }}">
                    Change my password
                </mj-button>
            </mj-column>
        </mj-section>
        <mj-section>
            <mj-text color="#cecece" font-size="12px" font-style="italic">Nodoo Forum software</mj-text>
        </mj-section>
    </mj-body>
</mjml>